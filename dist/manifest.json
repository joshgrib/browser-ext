{
  "manifest_version": 3,
  "name": "josh-chrome-extension",
  "version": "2.4.0",
  "permissions": [
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "background.bundle.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "jquery-3.4.1.slim.min.js",
        "content.bundle.js"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "A personal utility extension"
  }
}